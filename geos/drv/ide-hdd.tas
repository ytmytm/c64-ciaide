_AddDirBlock
		+PushW r6
		+LoadB r3L, HDD_DIR_TRACK
		+LoadB r3H, 0
		JSR SetNextFree
		+bnex ADirBlkEnd
		+CmpBI r3L, HDD_DIR_TRACK
		BEQ ADirBlk_1
		LDX #FULL_DIRECTORY
		BNE ADirBlkEnd
ADirBlk_1	+MoveW r3, diskBlkBuf
		JSR WriteBuff
		+bnex ADirBlkEnd
		+MoveW r3, r1
		JSR ClearAndWrite
ADirBlkEnd	+PopW r6
		RTS

